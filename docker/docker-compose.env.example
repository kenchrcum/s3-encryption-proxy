# S3 Encryption Gateway Environment Configuration
# Copy this file to .env and customize the values

# Gateway Configuration
GATEWAY_PORT=8080
LOG_LEVEL=info

# Backend S3 Configuration
# For MinIO (development/testing)
BACKEND_ENDPOINT=http://localhost:9000
BACKEND_REGION=us-east-1
BACKEND_ACCESS_KEY=minioadmin
BACKEND_SECRET_KEY=minioadmin123
BACKEND_USE_SSL=false

# For AWS S3 (production example)
# BACKEND_ENDPOINT=https://s3.us-east-1.amazonaws.com
# BACKEND_REGION=us-east-1
# BACKEND_ACCESS_KEY=your-aws-access-key
# BACKEND_SECRET_KEY=your-aws-secret-key
# BACKEND_USE_SSL=true

# Encryption Configuration (REQUIRED - CHANGE THIS!)
ENCRYPTION_PASSWORD=your-very-secure-encryption-password-change-this
ENCRYPTION_PREFERRED_ALGORITHM=AES256-GCM

# Compression (optional)
COMPRESSION_ENABLED=false
COMPRESSION_MIN_SIZE=1024

# Caching (optional - improves performance)
CACHE_ENABLED=true
CACHE_MAX_SIZE=104857600  # 100MB in bytes
CACHE_DEFAULT_TTL=5m

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_LIMIT=100      # requests per window
RATE_LIMIT_WINDOW=60s     # time window

# Audit Logging (optional)
AUDIT_ENABLED=false
